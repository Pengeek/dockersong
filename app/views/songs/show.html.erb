<p id="notice"><%= notice %></p>
<h1>Playing <%= @song.title %></h1>


<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Time</th>
    <th>User</th>
    <th>Play</th>
<!--    <th> Edit </th>-->
<!--    <th> Destroy</th>-->
  </tr>
  </thead>

  <tbody>
  <tr>
    <td><%= @song.title %></td>
    <td><%= @song.author %></td>
    <td><%= @song.time %></td>
    <td><%= @song.user_id %></td>
    <td><div class="spinner-border" role="status">
      <span class="sr-only"></span>
    </div></td>
  </tr>
  </tbody>
</table>


<div class="card text-center">
  <div class="card-header">
  </div>
  <div class="card-body">
    <h5 class="card-title">Song Text</h5>
    <p class="card-text"> <%= @song.text %></p>
  </div>
</div>


